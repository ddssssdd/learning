<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Compulsory Insurance" />
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_compulsory_insurance_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_weight="1.0"
         />
        <Button android:id="@+id/btn_compulsory_insurance_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_weight="1.0"
         />
        <Button android:id="@+id/btn_compulsory_insurance_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_weight="1.0"
         />    
            	   
        
    </LinearLayout>
	 

     <ExpandableListView
         android:id="@+id/expandableListView_compulsory_insurance"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#ffffff"
         android:cacheColorHint="#00000000"
         android:listSelector="#00000000" >
     </ExpandableListView>
</LinearLayout>